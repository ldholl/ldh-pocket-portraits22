
<container id="login-container">
    <h4>Log In:</h4>
    <div class="row" id="row">
<form class="login-form col s8 m4 l8" id="logForm">
    <div class="input-field">
        <input id="username-login" type="text" class="validate" placeholder="Username">

    </div>
    <div class="input-field">
        <input id="password-login" type="password" class="validate" placeholder="Password">
    </div>
    <div>
        <button class="waves-effect waves-light #00838f cyan darken-3 btn" type="submit" name="action">Submit</button>
    </div>

</form>
</div>
</container>
<p>OR</p>
{{!-- SIGN UP BUTTON --}}

<a class="waves-effect waves-light #00838f cyan darken-3 btn" onclick=document.getElementById('modalSignUp').style.display='block'>Sign Up</a>


{{!-- SIGN UP MODAL --}}

  <div  class="modal" id="modalSignUp">
    <div class="modal-content" >
      <h4>Sign Up</h4>
      <form class="signup-form">
    <div class="input-field">
        <input type="text" class="validate" placeholder="Username" id="username-signup" />
    </div>
    <div class="input-field">
        <input type="text" class="validate" placeholder="Email" id="email-signup" />
    </div>
    <div class="input-field">
        <input type="password" class="validate" placeholder="Password" id="password-signup" />
    </div>
    <div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
    </div>
</form>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
  </div>


  <script src="/javascript/login.js"></script>
